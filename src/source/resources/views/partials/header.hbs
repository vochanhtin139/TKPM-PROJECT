<!-- Header  -->
<header class='header fixed-top light'>
  <div class='container'>
    <div class='row align-items-center'>
      <div class='col row align-items-center'>
        <div class='logo col-2'>
          <a href='http://localhost:3000/'>
            <img src='/img/logo/logo-dark.png' alt='2HandBook logo' class='logo-img' /></a>
        </div>
        <div class='search-bar align-items-center col row'>
          {{!-- <input type='text' class='search-input col p-4' placeholder='Search...' />
          <a href='/product/all-product/search' class='search-icon-link'>
            <i class='fa-solid fa-magnifying-glass search-icon'></i>
          </a> --}}
          <form class='search-bar pt-3 align-items-center' action="/product/all-product/search">
            <input type='text' class='search-input col p-4' placeholder='Search...' name="keyword"/>
            <button class='search-icon-link'>
              <i class='fa-solid fa-magnifying-glass search-icon'></i>
              <button />
          </form>
        </div>
      </div>
      <div class='col-4 d-flex align-items-center'>
        {{#if isLoggedIn}}
          <div class='announce-container ms-auto'>
            <i class='fa-solid fa-bell announce-icon' onclick="getListAnnouncement()"></i>
            <ul class='announce-list'>
            </ul>
          </div>
          <a
            class='text-capitalize me-5 user-profile-btn'
            href='/account/my-profile/{{_id}}'
          >
            <i class='fa-solid fa-circle-user user-avatar'></i>
            <span>Hi, {{_firstName}}!</span></a>
        {{else}}
        <a class='btn btn-log-in text-uppercase ms-auto me-3' href='/account/sign-in' role='button'>sign in</a>
        <a class='btn btn-sign-up text-uppercase me-5' href='/account/sign-up' role='button'>sign up</a>
        {{/if}}
        <i class='fa-solid fa-cart-shopping cart-icon' onclick="getCart()"></i>
        <span class='badge badge-warning' id='lblCartCount'>{{_cartNumber}}</span>
      </div>
    </div>
  </div>
</header>
<script src='/js/header.js'></script>