<section class='row'>
  <aside class='sidebar col-2'></aside>
  <section class='edit-product col-10'>
    <div class='d-flex'>
      <a class='edit-product-breadcrumb' href='/product/manage'>
        <i class='fa-regular fa-chevron-left'></i>
        <span>Products</span>
      </a>
      <a class='btn text-uppercase ms-auto' href='#' role='button'>Save</a>
    </div>
    <section class='edit-product-forms row gx-0'>
      <ul class='edit-product-form col-7'>
        <li class='edit-product-form-item'>
          <label for='product-name'>Name</label>
          <input id='product-name' type='text' value='{{product.name}}' />
        </li>
        <li class='edit-product-form-item'>
          <label for='product-description'>Description</label>
          <textarea
            name=''
            id='product-description'
            cols='30'
            rows='10'
          >{{product.description}}</textarea>
        </li>
        <li class='edit-product-form-item row'>
          <div class='col'>
            <label for='product-price'>Price</label>
            <input id='product-price' type='text' value='{{product.price}}' />
          </div>
          <div class='col'>
            <label for='product-stock'>Stock</label>
            <input id='product-stock' type='text' value='{{product.stock}}' />
          </div>
        </li>
      </ul>
      <div class='edit-product-form col'>
        <div class='product-category'>
          <label class='product-category-label'>Category</label>
          <select class='edit-product-select'>
            <option value='Document' {{#if (isCategory product.category 'Document')}}selected{{/if}}>Document</option>
            <option value='Uniform' {{#if (isCategory product.category 'Uniform')}}selected{{/if}}>Uniform</option>
            <option value='Calculator' {{#if (isCategory product.category 'Calculator')}}selected{{/if}}>Calculator</option>
            <option value='Other' {{#if (isCategory product.category 'Other')}}selected{{/if}}>Other</option>
          </select>
        </div>
        <button class='product-image'>Click to Add an Image</button>
      </div>
    </section>
  </section>
</section>
