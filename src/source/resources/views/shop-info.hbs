<div class="shop-info">
  <div class="column">
    <div class="logo-section">
      <img class="shop-logo" src="{{account.avatar}}" alt="Shop Logo" />

      <div class="name-report">
        {{#if _isSeller}}
        <h1 class="shop-name">{{account.shopName}}</h1>
        {{else}}
        <h1 class="shop-name">{{account.firstName}} {{account.lastName}}</h1>
        {{/if}}
        <a href="http://localhost:3000/account/page/report/{{account._id}}">
          {{!-- <button id="report-button" class="button">Report</button> --}}
          {{#if (isAccountReported account.accountStatus)}}
          <button id="report-button" class="button" disabled>Reported</button>
          {{else}}
          <button id="report-button" class="button">Report</button>
          {{/if}}
        </a>
      </div>
    </div>
  </div>
    <div class="column">
      <div class="info-section">
        <div class="info-row d-flex align-items-center">
        {{#if _isSeller}}
          <p class="category">Total products:</p>
          <strong class="content">{{_numberOfProduct}}</strong>
        {{else}}
          <p class="category">Total orders:</p>
          <strong class="content">{{_totalOrder}}</strong>
        {{/if}}
        </div>

        <div class="info-row d-flex align-items-center">
        {{#if _isSeller}}
          <p class="category">Total reviews:</p>
          <strong class="content">{{_numberOfReview}}</strong>
        {{else}}
          <p class="category">Successful orders: </p>
          <strong class="content">{{_totalSucOrder}}</strong>
        {{/if}}
        </div>

        <div class="info-row d-flex align-items-center">
        {{#if _isSeller}}
          <p class="category">Average rating:</p>
          <strong class="content">{{_avgOfRating}}</strong>
        {{else}}
          <p class="category">Total pay:</p>
          <strong class="content">{{convertMoney _totalPay}}</strong>
        {{/if}}
        </div>
      </div>
    </div>
    <div class="col product-section">
      <section class="trend container">
        <div class="trend-row row">
          {{#each products}}
            <div class="col-3">
              <div class="trend-card card" data-id="{{this._id}}">
                <a
                  href="/product/specific-product/{{this._id}}"
                  class="trend-card-img"
                >
                  <img
                    src="{{this.image}}"
                    class="trend-prod-img"
                    alt="Something ..."
                  />
                </a>
                <p class="trend-card-title">{{this.name}}</p>
                <p class="trend-card-price">{{this.price}} VND</p>
                <a href="#" class="btn trend-card-btn">Buy now</a>
              </div>
            </div>
          {{else}}
            <div class="col">
              <div class="announcement text-center alert alert-warning">
                This account doesn't have any products !
              </div>
            </div>
          {{/each}}
        </div>
      </section>
      <script>
        let numberOfItems = {{_numberOfItems}};
        let limit = {{_limit}};
        let currentPage = {{_currentPage}};
        let leftMost = currentPage - ((currentPage - 1) % 3);
      </script>
      {{>pagination}}
    </div>
</div>

<script src="/js/shop-info.js"></script>