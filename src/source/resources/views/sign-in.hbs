<section class='container'>
  <section class='sign-in'>
    <h2 class='si-header'>SIGN IN</h2>

    <form method='GET' class='si-form' action='#'>
      <div class='si-info-input'>
        <label class='si-info' for='email'>Email</label>
        <br />
        <input class='si-input' type='email' id='email' name='email' /><br />
      </div>
      <div class='si-info-input'>
        <label class='si-info' for='pwd'>Password</label>
        <br />

        <input class='si-input' type='password' id='pwd' name='pwd' /><br />

        <div class='si-remem-pass'>
          <input
            class='si-rmpass-checkbox'
            type='checkbox'
            id='remem-pass'
            name='remem-pass'
            value='Remember password'
          />
          <label class='si-rmpass-text' for='remem-pass'>Remember password</label><br
          />
        </div>
      </div>

      <div class='si-buttons'>
        <button class='si-button' type='submit'>Sign in</button>
        <a class='si-button' href='/account/sign-up'>Sign up</a>
      </div>

      <a class='si-forget-pass' href='#'>Reset password</a>
    </form>
    {{#if successMessage}}
      <p style='color: green; margin-top: 2rem'>You have successfully signed up,
        please log in.</p>
    {{/if}}
  </section>
</section>