<div class="container">

  {{!-- <div class='account-profile-header'>
    <div class='container-fluid'>
      <a class='navbar-brand' href='#'>
        ACCOUNT PROFILE
      </a>
    </div>
  </div> --}}

  <div class='account-profile-main container-fluid'>
    <div class='row'>
      {{>sidebar-profile}}
      <div class='col-9'>
        <form class='row g-3' id='form-1'>
          <div class='col-md-6'>
            <div class='form-group'>
              <label class='form-label'>First name*</label>
              <input id='first_name' type='text' class='form-control' />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-md-6'>

            <div class='form-group'>
              <label class='form-label'>Last name*</label>
              <input id='last_name' type='text' class='form-control' />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Display name*</label>
              <input
                id='display_name'
                type='text'
                class='form-control'
                placeholder=''
              />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Email*</label>
              <input id='email' type='text' class='form-control' placeholder='' />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='form-group'>
              <label class='form-label'>Phone number*</label>
              <input id='phone_number' type='text' class='form-control' />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-md-6'>
            <label class='form-label'>City/Province</label>
            <select id='inputState' class='form-select'>
              <option selected>Choose</option>
              <option>TP HCM</option>
              <option>HA NOI</option>
              <option>DA NANG</option>
              <option>...</option>
            </select>
          </div>
          <div class='col-12 change-password'>
            <h3>CHANGE PASSWORD</h3>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Present password*</label>
              <input
                id='display_name'
                type='text'
                class='form-control'
                placeholder=''
              />
              <span class='form-message'></span>
            </div>
          </div>

          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>New password*</label>
              <input
                id='display_name'
                type='text'
                class='form-control'
                placeholder=''
              />
              <span class='form-message'></span>
            </div>
          </div>

          <div class='col-12 save-changes'>
            <button type="button" class="btn btn-outline-secondary">SAVE CHANGES</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src='/js/profile.js'></script>
<script src='/js/validation.js'></script>
