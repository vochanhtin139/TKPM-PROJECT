<div class="container">
  <div class='account-profile-main container-fluid'>
    <div class='row'>
      {{>sidebar-profile}}
      <div class='col-9'>
        <form class='row g-3' id='form-1'>
          <div class='col-md-6'>
            <div class='form-group'>
              <label class='form-label'>Name of your shop *</label>
              <input id='shop-name' type='text' class='form-control' />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='form-group'>
              <label class='form-label'>Type of your product *</label>
              <select id='type-product' class='form-select'>
                <option selected>Textbook</option>
                <option>Text document</option>
                <option>Calculator</option>
                <option>Uniform</option>
              </select>
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Job *</label>
              <input id='job' type='text' class='form-control' placeholder='' />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Address *</label>
              <input
                id='address'
                type='text'
                class='form-control'
                placeholder=''
              />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Email * (Can be edited in profile)</label>
              <input
                id='email'
                type='text'
                class='form-control disabled'
                placeholder='dinhquytrieu1010@gmail.com'
              />

            </div>
          </div>
          <div class='col-12'>
            <div class='form-group'>
              <label class='form-label'>Phone number * (Can be edited in profile)</label>
              <input
                id='phone'
                type='text'
                class='form-control disabled'
                placeholder='090 1234 567'
              />

            </div>
          </div>
          <div class='col-md-6'>
            <div class='form-group'>
              <label class='form-label'>Payments</label>
              <select id='payments' class='form-select'>
                <option selected>Cash On Delivery (COD)</option>
                <option>Internet Banking</option>
                <option>E-wallet</option>
              </select>
              <span class='form-message'></span>
            </div>
          </div>
          <div class='col-md-6'>
            <label class='form-label'>Bank *</label>
            <select id='inputState' class='form-select'>
              <option selected>Agribank</option>
              <option>Vietcombank</option>
              <option>BIDV</option>
            </select>
          </div>
