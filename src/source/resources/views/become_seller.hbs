<div class='account-profile-header'>
  <div class='container-fluid'>
    <a class='navbar-brand' href='#'>
      ACCOUNT PROFILE
    </a>
  </div>
</div>

<div class='account-profile-main'>
  <div class='row'>
    <div class='col-4'>
      <div class='avatar'>
        <div class='avatar-left'>
          <i class='fa-solid fa-user'></i>
        </div>

        <div class='avatar-right'>
          <div class='info'>
            <a href='#' class='avatar-name'>Dinh Quy Trieu</a>
            <span class='avatar-mail'>dinhquytrieu1010</span>
          </div>
          <div class='signup-btn'>
            <button type='button' class='btn btn-outline-primary'>SIGN UP</button>
          </div>
        </div>
      </div>
      <div class='my-account'>
        <button type='button' class='btn btn-outline-secondary'>
          <i class='fa-solid fa-pen-to-square'></i>
          <a class='page-link' href='http://localhost:3000/profile'>My account</a>
        </button>
      </div>
      <div class='my-order'>
        <button type='button' class='btn btn-outline-secondary'>
          <i class='fa-solid fa-cart-shopping'></i>
          <a class='page-link' href='http://localhost:3000/myorder'>My order</a>
        </button>
      </div>
      <div class='become-seller'>
        <button type='button' class='btn btn-outline-secondary bg-blue'>
          <i class='fa-solid fa-user color-white'></i>
          <a
            class='page-link color-white'
            href='http://localhost:3000/becomeseller'
          >Become seller</a>
        </button>
      </div>
      <div class='remain'></div>
    </div>
    <div class='col-8'>
      <form class='row g-3' id='form-1'>
        <div class='col-md-6'>
          <div class='form-group'>
            <label class='form-label'>Name of your shop *</label>
            <input id='shop-name' type='text' class='form-control' />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='form-group'>
            <label class='form-label'>Type of your product *</label>
            <select id='type-product' class='form-select'>
              <option selected>Textbook</option>
              <option>Text document</option>
              <option>Calculator</option>
              <option>Uniform</option>
            </select>
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <label class='form-label'>Job *</label>
            <input id='job' type='text' class='form-control' placeholder='' />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <label class='form-label'>Address *</label>
            <input
              id='address'
              type='text'
              class='form-control'
              placeholder=''
            />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <label class='form-label'>Email * (Can be edited in profile)</label>
            <input
              id='email'
              type='text'
              class='form-control disabled'
              placeholder='dinhquytrieu1010@gmail.com'
            />

          </div>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <label class='form-label'>Phone number * (Can be edited in profile)</label>
            <input
              id='phone'
              type='text'
              class='form-control disabled'
              placeholder='090 1234 567'
            />

          </div>
        </div>
        <div class='col-md-6'>
          <div class='form-group'>
            <label class='form-label'>Payments</label>
            <select id='payments' class='form-select'>
              <option selected>Cash On Delivery (COD)</option>
              <option>Internet Banking</option>
              <option>E-wallet</option>
            </select>
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-md-6'>
          <label class='form-label'>Bank *</label>
          <select id='inputState' class='form-select'>
            <option selected>Agribank</option>
            <option>Vietcombank</option>
            <option>BIDV</option>
          </select>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <div class='form-check'>
              <input
                class='form-check-input'
                type='checkbox'
                value=''
                id='flexCheckDefault'
              />
              <label class='form-check-label' for='flexCheckDefault'>
                Committed to the terms
              </label>
            </div>
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-md-6'></div>
        <div class='col-md-6 display_end'>
          <button class='form-submit btn btn-outline-primary half_height'>SIGN
            UP</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='js/become-seller.js'></script>
<script src='js/validation.js'></script>