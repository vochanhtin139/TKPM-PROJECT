            class='nav-link active'
            aria-current='page'
            href='#'
          >All announcements</a>
        </div>
      </div>
      <div class='admin-content'>
        <div class='admin-announce'>
          {{#each announcements}}
          <div class='admin-announce-box'>
            <div class='title'>{{this.title}}</div>
            <div class='d-flex justify-content-between'>
              <p>To: {{this.recipient}}</p>
              <p>Time: {{convertDate this.time}} </p>
            </div>
            <div class='d-flex justify-content-between'>
              <p class='text-truncate content'>Content: {{this.content}}</p>
              <a
                class='view-more-announcement link-primary'
                data-bs-toggle='modal'
                data-bs-target='#staticAnnouncement'
                id="modalButton"
                href="./{{this._id}}"
                data-title="{{this.title}}"
                data-recipient="{{this.recipient}}"
                data-content="{{this.content}}"
                data-time="{{this.time}}"
              >View more</a>
            </div>
          </div>
          {{/each}}
          
        </div>
        <script>
          let numberOfItems = {{_numberOfItems}};
          let limit = {{_limit}};
          let currentPage = {{_currentPage}};
          let leftMost = currentPage - ((currentPage - 1) % 3);
        </script>
        {{>pagination}}
        <div
          class='modal fade'
          id='staticAnnouncement'
          data-bs-backdrop='true'
          data-bs-keyboard='false'
          tabindex='-1'
          aria-labelledby='staticBackdropLabel'
          aria-hidden='true'
        >
          <div class='modal-dialog'>
            <div class='modal-content'>
              <div class='modal-header'>
                <div class='modal-title title' id='staticBackdropLabel'></div>
                <button
                  type='button'
                  class='btn-close'
                  data-bs-dismiss='modal'
                  aria-label='Close'
                ></button>
              </div>
              <div class='modal-body'>
                <p><strong>To: </strong><span id="mrecipient"></span></p>
                <p><strong>Time: </strong><span id="mtime"></span></p>
                <p><strong>Content: </strong><span id="mcontent"></span></p>
              </div>

            </div>
          </div>
        </div>
      </div>
